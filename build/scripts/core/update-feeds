#!/usr/bin/env bash
set -e

SCRIPTS_DIR="$(readlink -f "$(dirname "$0")")/.."

# shellcheck source=build/scripts/common.sh
. "${SCRIPTS_DIR}/common.sh"
parse_env_args

cd "${BUILDDIR}"

# Use Github mirrors
sed -i -E 's;git.openwrt.org/(feed|project);github.com/openwrt;' feeds.conf.default

"${SCRIPTS_DIR}/core/run" ./scripts/feeds update -a
"${SCRIPTS_DIR}/core/run" ./scripts/feeds install -a
