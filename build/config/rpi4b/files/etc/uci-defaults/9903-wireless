uci batch << EOI
set wireless.radio0.country='{{ .Env.WIRELESS_COUNTRY_TEMPLATE }}'
set wireless.radio0.cell_density='0'
set wireless.radio0.disabled='1'

set wireless.default_radio0.network='{{ .Env.WIRELESS_ONE_NETWORK_TEMPLATE }}'
set wireless.default_radio0.ssid='{{ .Env.WIRELESS_ONE_SSID_TEMPLATE }}'
set wireless.default_radio0.isolate='1'
set wireless.default_radio0.encryption='{{ .Env.WIRELESS_ONE_ENCRYPTION_TEMPLATE }}'
set wireless.default_radio0.key='{{ .Env.WIRELESS_ONE_KEY_TEMPLATE }}'

commit wireless
EOI

# To properly handle the changes
/sbin/wifi reload
